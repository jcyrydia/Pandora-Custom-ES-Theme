      <color>deec00</color>
    </menuTextSmall>
    <menuText name="menutitle">
      <fontSize>0.037</fontSize>
      <color>DFECFA</color>
    </menuText>
    <menuBackground name="menubg">
      <color>2D2C2C</color>
    </menuBackground>
    </view>


</theme>
